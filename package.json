{
  "name": "tivi",
  "version": "1.0.0",
  "description": "Remote desktop control system",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm run build",
    "test": "pnpm run test",
    "setup": "pnpm install && pnpm run build:shared",
    "dev:server": "pnpm --filter @tivi/server dev",
    "dev:control": "pnpm --filter @tivi/control dev",
    "build:shared": "pnpm --filter @tivi/shared build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swdevbali/tivi.git"
  },
  "keywords": ["remote-desktop", "webrtc", "screen-sharing"],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swdevbali/tivi/issues"
  },
  "homepage": "https://github.com/swdevbali/tivi#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
